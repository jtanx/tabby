<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.jtanx.tabby" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tabby</name>
    <description>
        A simple weather app that pulls information from the BOM.
    </description>
    <author email="jtanx@outlook.com" href="https://jtanx.github.io">
        Jeremy Tan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisableBouncyScrolling" value="true" />
    <preference name="windows-target-version" value="8.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.1" />
    <engine name="windows" spec="~4.4.2" />
</widget>
